<div class="container mt-5 mb-5">
    <div class="row">
        <div class="row">
                <div class="col-6 offset-md-3">
                    <% if @category.errors.any? %>
                        <h2 class="text-center">Following errors prevented the article from being saved
                        </h2>
                        <ul>
                            <% @category.errors.full_messages.each do |msg| %>
                                <li class='text-danger'><%= msg %></li>
                            <% end %>
                        </ul>
                    <% end %>
                </div>
        </div>

            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <%= form_with(model: @category, class: "shadow mb-3 rounded pb-5 pt-3
                    text-secondary px-3", local: true) do |f| %>
                    <h1 class='text-center'>Edit Category</h1>

                    <div class="form-group ">
                        <%= f.label :name, "Category Name: ", class: "col-form-label" %>
                        <div class="col">
                            <%= f.text_field :name, class: "form-control shadow rounded", placeholder:
                            "Enter Category Name..." %>
                        </div>
                    </div>

                    <div class="form-group mt-4">
                        <%= f.submit "Update Category", class: "btn btn-outline-success form-control" %>
                    </div>
                <% end %>
            </div>
            <div class="mt-3 mb-2">
                <%= link_to '<< Cancel and return to articles listing', articles_path, class:
                "text-info" %>
            </div>
</div>