<div class="container mt-5 mb-5">

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <%= form_with scope: :session,url:login_path, class: "shadow mb-3 rounded pb-5
            pt-3 text-secondary px-3", local: true do |f| %>
            <h1 class='text-center'>Welcome Back!</h1>

            <div class="form-group ">
                <%= f.label :email, class: "col-2 col-form-label" %>
                <div class="col">
                    <%= f.email_field :email, class: "form-control shadow rounded", placeholder:
                    "Enter your email address" %>
                </div>
            </div>

            <div class="form-group ">
                <%= f.label :password, class: "col-2 col-form-label" %>
                <div class="col">
                    <%= f.password_field :password, class: "form-control shadow rounded",
                    placeholder: "Choose a password" %>
                </div>
            </div>

            <div class="form-group mt-4">
                <%= f.submit "Log in", class: "btn btn-outline-success form-control" %>
            </div>
        <% end %>
    </div>
    <div class="mt-3 mb-2">
        <%= link_to '<< Cancel and return to articles listing', articles_path, class:
        "text-info" %>
    </div>
</div>
