<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 shadow pt-4 pb-4">
            <h1 class='text-center text-secondary'>Edit Article</h1>
            <hr>
            <div class="row mt-5">
                <div class="col-12">
                    <% if @article.errors.any? %>
                        <h2>Following errors prevented the article from being saved
                        </h2>
                        <ul>
                            <% @article.errors.full_messages.each do |msg| %>
                                <li class='text-danger'><%= msg %></li>
                            <% end %>
                        </ul>
                    <% end %>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <%= form_with(model: @article, local:true ) do |f| %>
                    <div class='form-group'>
                        <%= f.label :title, class:"col-form-label" %>
                        <div>
                        <%= f.text_field :title,class:'form-control' %>
                        </div>
                    </div>
                    <div class="form-group">
                        <%= f.label :description, class:"col-form-label" %>
                        <div>
                        <%= f.text_area :description, rows:10, class:"form-control" %>
                        </div>
                    </div>
                     <div class="form-group">
                        <%= f.label :category, class: "col-2 col-form-label" %>
                        <div class="col-12"> 
                            <%= f.collection_select(:category_ids, Category.all, :id, :name,
                            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select form-control shadow rounded" }) %>
                        </div>
                    </div>
                    <div class="mt-4">
                        <%= f.submit class:"form-control btn btn-outline-success" %>
                    </div>
                <% end %>
                <div class="mt-4">
                <%= link_to '<< Cancel edit and back To Article Listing page', articles_path %>
                </div>
            </div>
        </div>

    </div>
</div>
</div>