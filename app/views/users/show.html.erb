<div class="container mt-5 mb-5">
    <div class="row text-center mb-5">
        <div class="col-12 text-success text-muted">
            <h1><%= @user.username %>
                Prfile
            </h1>
            <%= link_to 'Edit Your Profile', edit_user_path(@user), class:"btn
            btn-outline-success mt-3" %>
        </div>
    </div>
    <hr/>
    <hr/>

    <div class="row mb-5">
        <% @articles.each do |article| %>
            <div class="col-md-4 mb-3">
                <div class="card text-center shadow rounded">
                    <div class="card-header fst-italic">
                        Published by
                        <%= article.user.username %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-success"><%= link_to article.title, article_path(article), class:"text-success" %></h5>
                        <p class="card-text"><%= truncate(article.description, length:100) %></p>
                        <%= link_to "View", article_path(article), class:"btn btn-outline-success" %>
                        <%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-warning"
                        %>
                        <%= link_to 'Delete', article_path(article), method: :delete,data: {confirm:'Are
                        you sure?'}, class:"btn btn-outline-danger" %>
                    </div>
                    <div class="card-footer text-body-secondary">
                        <small>Created
                            <%= time_ago_in_words(article.created_at) %>
                            ago, Updated
                            <%= time_ago_in_words(article.updated_at) %>
                        </small>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

</div>
<div class="digg_pagination">
    <%= will_paginate @articles, :container => false %>
</div>